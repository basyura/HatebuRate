<h1>はてブらんく</h1>

<div>
  <div align="right" style="float:right">
    <span><%= @items.length %> / <%= @count %>,   threshold : <%= @threshold %></span>
  </div>
</div>

<div style="clear:both;padding-top:10px">

  <% @items.each do |item| %>
      <div id="<%= item.id %>" class="feed">
        <%= item.point %>
        <%= link_to image_tag('/images/up.gif', {:align => 'center'}), :action => 'up', :method => 'post', :remote => true, "data-type" => "html", :class => 'up', :title => item.title, :id => item.id %>
        <%= link_to image_tag('/images/down.gif', {:align => 'center'}), :action => 'down', :method => 'post', :remote => true, "data-type" => "html", :class => 'down', :title => item.title, :id => item.id  %>
        <span class="title"><a href="<%= item.url %>" target="_blank" ><%= item.title %></a> - <%= item.date %></span>
        <div style="margin-left:50px;color:gray;">
          <%= item.surfaces.join(' , ') %>
       </div>
    </div>
  <% end %>

</div>


<div style="padding-top:10px">
  <%= form_tag :action => "done" do |f| %>
    <%= button_tag "既読にする", :style => "width:140px;height:50px;" %>
    <%= hidden_field_tag "done_list", "#{@items.map{|item| item.id}.join(',')}" %>
  <% end %>
</div>
